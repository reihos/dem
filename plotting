set term pngcairo enhanced font "Times New Roman,24.0" size 1500,500
do for [j=0:*:1000] {
set output sprintf('positions%06.0f.png',j)
set xlabel 'x (m)'
set ylabel 'y (m)'
set xrange[0:0.12]
set yrange[0:0.04]
set size ratio -1
set key off
plot for [IDX=0:399] sprintf('positions%06.0f.dat',j) i IDX u 1:2 w filledcurves fc rgb '#E6B482' fs solid border lc '#CC661A' lw 2
}


